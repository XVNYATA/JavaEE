<?xml version="1.0" encoding="UTF-8"?>
<!-- Spring的默认配置文件名称为applicationContext.xml，也可以改成其他名称
     根元素是beans,Spring的所有都是使用bean来完成的
   使用的schema是spring-beans-4.0.xsd  -->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- 抽象bean可以没有Class属性，因为不是Java对象,目的只是将充分的配置放在一起做一个模板 -->
	<bean id="animal" abstract="true">
		<property name="name" value="动物"/>
    	<property name="sex" value="公"/>
    	<property name="age" value="1"/>
	</bean>

	<!-- 子bean，dog的所有属性都是在抽闲bean animal当中定义的 -->
    <bean id="dog" class="org.fkjava.domain.Dog" parent="animal"/>
    
    <!-- 子bean， cat的所有属性都是在抽闲bean animal当中定义的，当时name会使用自己定义的 -->
     <bean id="cat" class="org.fkjava.domain.Cat" parent="animal">
    	<property name="name" value="花花"/>
    </bean>
    
   
  
</beans>






