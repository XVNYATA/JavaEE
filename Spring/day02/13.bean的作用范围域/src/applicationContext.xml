<?xml version="1.0" encoding="UTF-8"?>
<!-- Spring的默认配置文件名称为applicationContext.xml，也可以改成其他名称
     根元素是beans,Spring的所有都是使用bean来完成的
   使用的schema是spring-beans-4.0.xsd  -->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
	<!-- 
		程序最终目的是：每一个user获取的dog是不同实例
	 -->

	 <!-- dog 是   prototype -->
    <bean id="dog" class="org.fkjava.domain.Dog" scope="prototype">
    	<property name="name" value="赛虎"/>
    	<property name="sex" value="公"/>
    	<property name="age" value="1"/>
    </bean>
    
   <!-- user 是   singleton -->
    <bean id="user" class="org.fkjava.domain.User" scope="singleton">
    	<property name="dog" ref="dog"/>
    </bean>
  
   
  
</beans>






